<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="20dp"
    android:elevation="6dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add or Remove Dhikr"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/et_dhikr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new Dhikr"
        android:padding="12dp"
        android:background="@drawable/input_background"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_add_dhikr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/green"
        android:text="Add Dhikr"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_add"
        android:drawablePadding="10dp"
        android:paddingVertical="12dp" />

    <Button
        android:id="@+id/btn_delete_dhikr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Delete Selected Dhikr"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_delete"
        android:drawablePadding="10dp"
        android:paddingVertical="12dp"
        android:visibility="gone" />
</LinearLayout>
